<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/dynamic_QRCode"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:contentDescription="will be updated with the users QR code"
        app:srcCompat="@android:drawable/ic_secure" />

    <TextView
        android:id="@+id/dynamic_txt_publicAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="153dp"
        android:background="@android:color/holo_red_dark"
        android:contentDescription="will be updated with users key"
        android:textSize="16sp"
        tools:text="1qar0srrr7xfkvy5l643lydnw9re59gtzzwf5m"
        android:textIsSelectable="true"/>

</RelativeLayout>